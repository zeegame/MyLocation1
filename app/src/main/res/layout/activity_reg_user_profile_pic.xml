<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_user_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_user_profile_pic">


    <TextView
        android:id="@+id/textProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="รูปโปรไฟล์"
        android:textColor="@color/TextColor"
        android:textSize="19dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="152dp"
        android:layout_height="163dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textProfile"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/tvLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:text="ไว้ทีหลัง"
        android:textColor="@color/TextColor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/hasAccountInProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/TextColor"
        android:textSize="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/backRegUserPic"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />
    <Button
        android:id="@+id/btRegUserPic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:stateListAnimator="@null"
        android:layout_below="@+id/tvLater"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:text="@string/continued"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>